rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 允许访问设备数据（仅自用项目，安全性依赖于 deviceId 的保密）
    match /devices/{deviceId}/{collection=**} {
      allow read, write: if true;
    }
    
    // 允许访问用户数据（仅自用项目，安全性依赖于 userId/dataOwnerId 的保密）
    match /users/{userId}/{collection=**} {
      allow read, write: if true;
    }
    
    // 允许访问根级别集合（向后兼容）
    match /{collection=**} {
      allow read, write: if true;
    }
  }
}
